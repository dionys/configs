
-b                            # сохранять форматирование в исходный файл, создавать резервную копию
-bext='/'                     # удалять резервную копию, если нет ошибок
-w                            # выводить предупреждающие сообщения

--check-syntax                # проверять синтаксис
--perl-syntax-check-flags=-c

-l=78                         # максимальная длина строки в 78 символов
-i=4                          # отступ в 4 колонки
--tab                         # отступ реализуется табами
-et=4                         # 4 пробела соответствуют отдному табу

--continuation-indentation=4  # при переносе длинного выражения добавляются 4 пробела

--output-line-ending=unix     # строки должны заканчиваться на \n

--noadd-whitespace            # не добавлять дополнительных пробелов для увеличения читаемости

--paren-tightness=2           # круглые скобки не отделяются пробелами от других конструкций
--square-bracket-tightness=2  # квадратные скобки не отделяются пробелами от других конструкций
--brace-tightness=2           # фигурные скобки хеша не отделяются пробелами от содержимого
--block-brace-tightness=0     # фигурные скобки блоков кода отделяются пробелами от содержимого

--nospace-terminal-semicolon  # перед заканчивающей выражение точкой с запятой не ставится пробел
--nospace-for-semicolon       # перед точкой с запятой не ставится пробел
--add-semicolons              # перед закрывающей блок кода скобкой ставится точка с запятой

--freeze-blank-lines          # не удалять пустые строки
